<html>
  <head>
    <title>Sliver.me</title>




    <%= javascript_include_tag :defaults %>
   <script src="/shadowbox/shadowbox.js" type="text/javascript"></script>

<script type="text/javascript">
Shadowbox.init({
    language:   "it",
    players: ["iframe","img", "html"]
});
</script>

    <link href="/shadowbox/shadowbox.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/style.css" media="screen" rel="stylesheet" type="text/css" />

  </head>
  <body>
  <div id="about_us"><a href="/biz/credits"><img src="/images/about_us.png"></a></div>
        <center><div id="logo"><a href="/"><img src ="/images/logo.png"></a></div></center>
        <div id ="content">
        <center>
 <div id ="message">
<% unless flash[:notice].blank? %>

  <% flash.each do |key, msg| %>
   <%= content_tag :div, msg, :class => "notification", :id => key %>
   <% content_tag :script, :type => "text/javascript" do %>
   $('<%= key %>').style.display = 'none';
   new Effect.Appear('<%= key %>', {duration: 1});
  <% end %>

   <% content_tag :script, :type => "text/javascript" do %>
  setTimeout("new Effect.Fade('<%= key %>');", 10000);
 <% end %>
  <% end %>

 <%end%>

<% unless flash[:warning].blank? %>

  <% flash.each do |key, msg| %>
   <%= content_tag :div, msg, :class => "warning", :id => key %>
   <% content_tag :script, :type => "text/javascript" do %>
   $('<%= key %>').style.display = 'none';
   new Effect.Appear('<%= key %>', {duration: 1});
  <% end %>

   <% content_tag :script, :type => "text/javascript" do %>
  setTimeout("new Effect.Fade('<%= key %>');", 10000);
 <% end %>
  <% end %>

 <%end%>
          
 </div>


          <%= yield %>

        </center>
       </div>




  </body>
</html>
