 <div style="color:white"><%= error_messages_for 'sliver' %></div>
<div style="margin-top:200px">

  <% form_for(@sliver) do |f| %>

      <table>
      <tr><td style="text-align:right;color:white">Sliver Title:<br></td><td><%= f.text_field :title %></td></tr>
      <tr><td style="text-align:right;color:white">Url:</td><td><%= f.text_field :long_url %></td><td style="text-align:right;color:white">Type:</td><td><%= f.select :link_type, "<option>Web Page</option>,
                                                            <option>Image</option>" %></td></tr>

     <tr><td style="text-align:right;color:white">Tweaze Sliver On:</td><td><%= f.date_select(:tweaze_date, :order =>[:month,:day,:year]) %></td></tr>
      </table>
    <p>
      <%= f.submit 'Create Sliver!' %>
    </p>
  <% end %>



</div>
